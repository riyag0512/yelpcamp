    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
               
  
  <a class="navbar-brand" href="/">Yelpcamp</a>

  <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if(!currentUser){ %>
          <li><a href="/login">Login</a></li>
